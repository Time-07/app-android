<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Styles Login -->

    <style name="InputError" parent="TextAppearance.Design.Error"/>
    <style name="InputError.Purple">
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="Login_Label">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/fredoka_regular</item>
    </style>

    <style name="Login_Input_text_layout">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/color_sing_up_hint</item>
        <item name="hintTextColor">@color/color_sing_up_hint</item>
    </style>

    <style name="Login_Button">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:listSelector">@drawable/button_state_color_background</item>

    </style>

    <style name="Signup_Question">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Signup_Link">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_light</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="SearchLabelText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/fredoka_regular</item>
    </style>

    <style name="Search_TextInputLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/hint_search_color</item>
        <item name="hintTextColor">@color/hint_search_color</item>
    </style>

    <style name="Search_Text_Subtitles">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fredoka_regular</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.BottomSheetDialog">
        ...
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Search_Button">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/search_button</item>
    </style>


    <!-- Styles Signup -->

    <style name="SingUp_Title">
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/fredoka_condensed_regular</item>
    </style>

    <style name="SingUp_TextInputEditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/color_sing_up_hint</item>
        <item name="singleLine">true</item>
        <item name="paddingStart">24dp</item>
        <item name="hintTextColor">@color/color_sing_up_hint</item>
    </style>

    <style name="SingUp_TextInputLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/color_sing_up_hint</item>
        <item name="hintTextColor">@color/color_sing_up_hint</item>
    </style>

    <style name="SingUp_RadioGroup_Text">
        <item name="android:textColor">@color/color_sing_up_hint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="RadioButton_SingUp">
        <item name="android:textSize">18sp</item>
        <item name="color">@color/black</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="buttonTint">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="UserMessengerTextStyle">
        <item name="android:textColor">#54000000</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>


    <style name="SingUp_TextButtonDisable_Style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/button_string_sing_up_disable</item>
    </style>

    <style name="SingUp_TextButtonEnable_Style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextErrorStyle">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>