<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.ListFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nameUserTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:fontFamily="@font/inter_medium"
        tools:text="Fernanda"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingStart="60dp"
        android:gravity="top"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toBottomOf="@id/nameUserTV"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        android:text="@string/disconnect_string"
        android:textSize="14sp"
        android:textColor="@color/black_transparence_50"
        android:background="@color/transparent"
        app:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/listTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/list_title_string"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/fredoka_regular_400"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/nameUserTV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingEnd="50dp"
        android:paddingStart="32dp"
        android:textSize="14sp"
        android:maxLines="6"
        android:lineSpacingExtra="10dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/explain_search_string"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        app:layout_constraintTop_toBottomOf="@id/listTitleTV" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:drawablePadding="8dp"
        android:text="@string/search_string"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_baseline_manage_search"
        android:background="@drawable/search_button_background"
        app:layout_constraintStart_toStartOf="@id/guideline3"
        app:layout_constraintEnd_toEndOf="@id/guideline4"
        app:layout_constraintTop_toBottomOf="@id/listTitleTV"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="7dp"
        android:paddingStart="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />



</androidx.constraintlayout.widget.ConstraintLayout>