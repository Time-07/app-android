<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.ioasys.appcamp.presentation.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_SearchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_btnSignupLink_to_SingUpFragment"
            app:destination="@id/SingUpFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/SingUpFragment"
        android:name="br.com.ioasys.appcamp.presentation.ui.fragments.SingUpFragment"
        android:label="fragment_book_list"
        tools:layout="@layout/fragment_sing_up" >
        <action
            android:id="@+id/action_SingUpFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="br.com.ioasys.appcamp.presentation.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/listFragment"
        android:name="br.com.ioasys.appcamp.presentation.ui.fragments.ListFragment"
        android:label="list_fragment"
        tools:layout="@layout/fragment_default_list">
        <action
            android:id="@id/listFragment"
            app:destination="@id/loginFragment"
            />
    </fragment>

</navigation>